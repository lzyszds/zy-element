{
  "name": "@zy-element/workspace",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm --filter @zy-element/play dev",
    "docs:dev": "pnpm --filter @zy-element/docs dev",
    "docs:build": "pnpm --filter @zy-element/docs build",
    "test": "run-s test-utils test-hooks test-comp",
    "test-comp": "cross-env NODE_ENV=test pnpm --filter @toy-element/components test",
    "test-utils": "cross-env NODE_ENV=test pnpm --filter @toy-element/utils test",
    "test-hooks": "cross-env NODE_ENV=test pnpm --filter @toy-element/hooks test",
    "build": "run-s build-hooks build-comp",
    "build-comp": "cross-env NODE_ENV=production pnpm --filter toy-element build",
    "build-hooks": "cross-env NODE_ENV=production pnpm --filter @toy-element/hooks build",
    "build:dev": "cross-env NODE_ENV=development pnpm --filter toy-element build:watch",
    "changed": "dotenv lerna version --conventional-commits --create-release github --yes",
    "changed:patch": "dotenv lerna version patch --conventional-commits --create-release github --yes",
    "changed:major": "dotenv lerna version major --conventional-commits --create-release github --yes",
    "release": "lerna publish from-package --yes"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.20",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/tsconfig": "^0.5.1",
    "postcss-color-mix": "1.1.0",
    "postcss-each": "^1.1.0",
    "postcss-each-variables": "^0.3.0",
    "postcss-for": "^2.1.1",
    "postcss-nested": "^6.0.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vitest": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "cross-env": "^7.0.3",
    "vue-tsc": "^1.8.27"
  },
  "dependencies": {
    "@zy-element/hooks": "workspace:*",
    "@zy-element/theme": "workspace:*",
    "@zy-element/utils": "workspace:*",
    "lodash-es": "^4.17.21",
    "vue": "^3.5.10",
    "zy-element": "workspace:*"
  }
}
